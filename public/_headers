# Cache control headers for Netlify/Vercel/most static hosts

# Don't cache HTML files (force revalidation on every request)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Root index.html (most important!)
/
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Version and release files should never be cached
/version.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/releases.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Service worker must never be cached
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
  Service-Worker-Allowed: /

# JavaScript and CSS files with hashes CAN be cached forever (content hash changes = new file)
/js/*.js
  Cache-Control: public, max-age=31536000, immutable

/css/*.css
  Cache-Control: public, max-age=31536000, immutable

# Images can be cached for a while
/images/*
  Cache-Control: public, max-age=604800

# Fonts can be cached forever
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Assets with hashes can be cached forever
/assets/*-*.js
  Cache-Control: public, max-age=31536000, immutable

/assets/*-*.css
  Cache-Control: public, max-age=31536000, immutable

/assets/*-*.png
  Cache-Control: public, max-age=31536000, immutable

/assets/*-*.jpg
  Cache-Control: public, max-age=31536000, immutable

/assets/*-*.svg
  Cache-Control: public, max-age=31536000, immutable
