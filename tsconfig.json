{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false, // Temporarily disabled to maintain compatibility
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false, // Disabled temporarily
    "noImplicitOverride": false,
    "exactOptionalPropertyTypes": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "src/tests",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "**/*.test.*",
    "**/*.spec.*",
    "src/components/admin/CalendarDebugger.tsx",
    "src/components/admin/CalendarSyncTest.tsx",
    "src/components/admin/GoogleTasksSyncDebugger.tsx",
    "src/components/admin/GoogleTasksTests.tsx",
    "src/components/admin/WorkflowsE2ETestSuite.tsx",
    "src/test-*.ts",
    "src/test-*.tsx",
    "src/test-calendar-e2e.ts",
    "src/test-calendar-sync.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}