# Example environment variables file
# Copy this to .env and fill in your values

# Application
APP_NAME=sixty-sales-dashboard
NODE_ENV=development
PORT=3000

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# AI Provider API Keys
# Get your API keys from:
# OpenAI: https://platform.openai.com/api-keys
# Anthropic: https://console.anthropic.com/api-keys
# OpenRouter: https://openrouter.ai/keys
# Gemini: https://makersuite.google.com/app/apikey

VITE_OPENAI_API_KEY=
VITE_ANTHROPIC_API_KEY=
VITE_OPENROUTER_API_KEY=
VITE_GEMINI_API_KEY=

# AWS Configuration (for email service)
VITE_AWS_REGION=
VITE_AWS_ACCESS_KEY_ID=
VITE_AWS_SECRET_ACCESS_KEY=

# Playwright Test User Configuration
TEST_USER_EMAIL=playwright@test.com
TEST_USER_PASSWORD=TestPassword123!
PLAYWRIGHT_TEST_PASSWORD=TestPassword123!

# Supabase Service Role Key (needed for setup script)
# Get from: https://app.supabase.com/project/[PROJECT_ID]/settings/api
SUPABASE_SERVICE_ROLE_KEY=

# Fathom API OAuth Configuration
# Get OAuth credentials from: https://app.fathom.video/settings/integrations
VITE_FATHOM_CLIENT_ID=your_fathom_client_id
VITE_FATHOM_CLIENT_SECRET=your_fathom_client_secret
# Note: Redirect URI must point to your Supabase Edge Function
# Format: https://YOUR_PROJECT_ID.supabase.co/functions/v1/fathom-oauth-callback
VITE_FATHOM_REDIRECT_URI=https://your-project.supabase.co/functions/v1/fathom-oauth-callback
FATHOM_API_BASE_URL=https://api.fathom.video/v1

# Add more variables as needed
